# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=5000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
MONGODB_URI=mongodb://localhost:27017/chatbot_platform
MONGODB_TEST_URI=mongodb://localhost:27017/chatbot_platform_test

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379

# ==============================================
# JWT AUTHENTICATION
# ==============================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production_min_32_chars
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGIN=http://localhost:3000
# For production with multiple origins:
# CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com

# ==============================================
# AWS S3 CONFIGURATION (for file uploads)
# ==============================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
MAX_KNOWLEDGE_BASE_SIZE=104857600

# ==============================================
# WHATSAPP BUSINESS API
# ==============================================
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# ==============================================
# COMMUNICATION API (Calls, SMS, Email)
# ==============================================
COMM_API_URL=http://localhost:8000

# ==============================================
# RAG API (Knowledge Base, Chat)
# ==============================================
RAG_API_URL=http://localhost:8000

# ==============================================
# EMAIL CONFIGURATION (for operator invites)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Your Company

# ==============================================
# FRONTEND URL (for email links)
# ==============================================
FRONTEND_URL=http://localhost:3000

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# FILE UPLOAD LIMITS
# ==============================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,docx,csv,txt,tsv

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ==============================================
# EXTERNAL INTEGRATIONS (Optional)
# ==============================================
# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn

# Facebook Integration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Shopify Integration  
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret

# Stripe (for billing)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ==============================================
# WEBSOCKET CONFIGURATION
# ==============================================
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# ==============================================
# CRON/SCHEDULED JOBS
# ==============================================
ENABLE_SCHEDULED_JOBS=true

# ==============================================
# ENCRYPTION (for sensitive data)
# ==============================================
ENCRYPTION_KEY=your_32_character_encryption_key_here_change_in_prod

# ==============================================
# API VERSIONING
# ==============================================
API_VERSION=v1

# ==============================================
# TESTING
# ==============================================
RUN_MIGRATIONS=false
SEED_DATABASE=false